@using System.Globalization
@inject LocalizationService Localizer

<div class="container-fluid">
	<div class="row align-items-center bg-light px-xl-5">
		<div class="col-lg-3">
			<a href="/Default/Index/" class="text-decoration-none">
				<span class="h1 text-uppercase text-primary bg-dark px-2">Multi</span>
				<span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">Shop</span>
			</a>
		</div>
		<div class="col-lg-3 col-4 text-left">
			<form action="">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="@Localizer.GetLocalizedHtmlString("Aranacak Ürünü Giriniz")">
					<div class="input-group-append">
						<span class="input-group-text bg-transparent text-primary">
							<i class="fa fa-search"></i>
						</span>
					</div>
				</div>
			</form>
		</div>
		<div class="col-lg-3 col-4 text-right">
			<p class="m-0">@Localizer.GetLocalizedHtmlString("Telefon Numaramız")</p>
			<h5 class="m-0">+90 123 456 6789</h5>
		</div>
		<div class="col-lg-3 col-4 text-right">
			@await Html.PartialAsync("_SetLanguagePartial")
		</div>
	</div>
</div>