@model List<BasketItemDto>
@{
    decimal unitTotalPrice = 0;
    decimal totalProductPrice = 0;
    decimal totalPriceWithTax = 0;
    int shippingPrice = 20;
    decimal totalOrderPrice = 0;
}
<div class="bg-light p-30 mb-5">
    <div class="border-bottom">
        <h6 class="mb-3">Sipariş Ürün Listesi</h6>
        @foreach(var item in Model)
        {
            unitTotalPrice = item.Price * item.Quantity;
            totalProductPrice += unitTotalPrice;
            totalPriceWithTax = totalProductPrice + totalProductPrice / 100 * 10;
            totalOrderPrice = totalPriceWithTax + shippingPrice;


            <div class="d-flex justify-content-between">
                <p>@item.ProductName (@item.Quantity)</p>
                <h6>@unitTotalPrice ₺</h6>
            </div>
        }        
    </div>
    <div class="border-bottom pt-3 pb-2">
        <div class="d-flex justify-content-between">
            <h6>Alışveriş Tutarı</h6>
            <h6>@totalProductPrice ₺</h6>
        </div>
        <div class="d-flex justify-content-between mb-3">     
            <h6>Alışveriş Tutarı (Kdv dahil)</h6>
            <h6>@totalPriceWithTax ₺</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Kargo Ücreti</h6>
            <h6 class="font-weight-medium">@shippingPrice ₺</h6>
        </div>
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Genel Toplam</h5>
            <h5>@totalOrderPrice ₺</h5>
        </div>
    </div>
</div>