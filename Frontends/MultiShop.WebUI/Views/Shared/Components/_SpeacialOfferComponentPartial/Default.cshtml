@model List<ResultSpecialOfferDto>
@inject LocalizationService Localizer
<div class="col-lg-4">
    @foreach(var item in Model)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@item.ImageUrl" alt="">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@Localizer.GetLocalizedHtmlString(@item.Title)</h6>
                <h3 class="text-white mb-3">@Localizer.GetLocalizedHtmlString(@item.SubTitle)</h3>
                <a href="" class="btn btn-primary">@Localizer.GetLocalizedHtmlString("Alışverişe Başlayın")</a>
            </div>
        </div>
    }    
</div>